<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CareConnect"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/notif"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/circle_mask"
        android:src="@drawable/notification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/circle_mask"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/carousel1"
        app:riv_corner_radius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/btnDonate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/judul" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="DONATE"
        android:drawableLeft="@drawable/donation"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/judul"
        app:layout_constraintVertical_bias="0.5"
        android:padding="18dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterCharities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTERED CHARITIES"
        app:cornerRadius="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/office"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnDonate"
        app:layout_constraintVertical_bias="0.3"
        android:padding="18dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEWS"
        app:cornerRadius="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/news"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnRegisterCharities"
        app:layout_constraintVertical_bias="0.4"
        android:padding="18dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREDIKSI"
        app:cornerRadius="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/pencil"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnNews"
        app:layout_constraintVertical_bias="0.7"
        android:padding="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
